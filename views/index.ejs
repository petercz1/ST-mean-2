<!DOCTYPE html>
<html lang="en">

<head>
    <title>Demo</title>
    <link rel="icon" href="https://undertale.aminoapps.com/static/bower/emojify.js/images/emoji/fish.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
    <script src="js/frontend_app.js"></script>

</head>

<body ng-app="mean_demo">
    <h1>Demo</h1>

    <div ng-controller="crudController">
        <h2>CREATE</h2>
        <form>
            <input type="text" ng-model="input_name" placeholder="name">
            <input type="text" ng-model="input_gender" placeholder="gender">

            <select ng-model="input_job">
                <option value="">select job</option>
                <option ng-repeat="job in jobs">{{job}}</option>
            </select>
            
            <button class="btn btn-primary" ng-click="create()">create user</button>
        </form>

        <h2>READ</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>_id</th>
                    <th>name</th>
                    <th>gender</th>
                    <th>role</th>
                    <th>important!</th>
                    <th>UPDATE</th>
                    <th>DELETE</th>
                </tr>
            </thead>
            <tbody ng-repeat="user in users">
                <tr ng-class="{'male': user.gender == 'Male', 'female': user.gender == 'Female'}">
                    <td>{{user._id}}</td>

                    <td>
                        <input type="text" ng-model="user.name">
                    </td>
                    <td>
                        <input type="text" ng-model="user.gender">
                    </td>
                    <td>
                        <input type="text" ng-model="user.job">
                    </td>
                    <td>
                       <span ng-if="user.job == 'CEO'"><img src="images/tick.png" alt=""></span> 
                    </td>
                    <td>
                        <button class="btn btn-warning" ng-click="update(user)">update</button>
                    </td>
                    <td>
                        <button class="btn btn-danger" ng-click="delete(user)">delete</button>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>

</body>

</html>